#include <iostream>
using namespace std;

class Student {
private:
    string name;
    int age;

public:
    // Constructor
    Student(string n, int a) {
        name = n;
        age = a;
        cout << "Constructor called! Object created." << endl;
    }

    // Member function
    void display() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }

    // Destructor
    ~Student() {
        cout << "Destructor called! Object destroyed." << endl;
    }
};

int main() {
    Student s1("Karthik", 21);
    s1.display();
    return 0;
}
