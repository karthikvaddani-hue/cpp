#include <iostream>
using namespace std;

class Student {
private:
    string name;
    int age;

public:
    // Constructor using 'this' pointer
    Student(string name, int age) {
        this->name = name;  // 'this' refers to the current object
        this->age = age;
    }

    void display() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }

    // Function returning the current object using 'this'
    Student& setAge(int age) {
        this->age = age;
        return *this; // returns reference to current object
    }
};

int main() {
    Student s1("Karthik", 21);
    s1.display();

    s1.setAge(22).display();  // method chaining using 'this'

    return 0;
}
