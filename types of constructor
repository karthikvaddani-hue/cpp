#include <iostream>
using namespace std;

class Box {
    int length, width;

public:
    // Default constructor
    Box() {
        length = 0;
        width = 0;
        cout << "Default constructor called." << endl;
    }

    // Parameterized constructor
    Box(int l, int w) {
        length = l;
        width = w;
        cout << "Parameterized constructor called." << endl;
    }

    void area() {
        cout << "Area: " << length * width << endl;
    }

    // Destructor
    ~Box() {
        cout << "Destructor called." << endl;
    }
};

int main() {
    Box b1;          // Calls default constructor
    Box b2(5, 4);    // Calls parameterized constructor
    b2.area();
    return 0;
}
